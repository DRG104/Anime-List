{% layout 'layout.liquid' %}

<!-- shows a single anime from search -->

{% block content %}
<div id="show-card">
    <div class="row row-cols-1 row-cols-md-1 g-4">
            <div class="card border-dark mb-3 text-center" style="max-width: 800px">
                <div class="row g-0">
                    <div class="col-md-4">
                        <div>
                            <img src="{{anime.data.images.jpg.large_image_url}}" class="img-fluid rounded-3">
                        </div>
                        <div class="extra-info">
                            <h6>Duration: {{anime.data.duration}}</h6>
                            <h6>Rating: {{anime.data.rating}}</h6>
                            <h6>User score: {{anime.data.score}}/10</h6>
                            <h6>Status: {{anime.data.status}}</h6>
                            <h6>Year: {{anime.data.year}}</h6>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{anime.data.title}}</h5>
                                <p class="card-text" id="synopsis">
                                    {{anime.data.synopsis}}
                                </p>
                                <div class="row align-items-end">
                                    {% for genre in anime.data.genres %}
                                        <div class="col-md-4">
                                            <p class="card-text"><small class="text-muted">{{genre.name}}</small></p>
                                        </div>
                                    {% endfor %}
                                    {% for theme in anime.data.themes %}
                                        <div class="col-md-4">
                                            <p class="card-text"><small class="text-muted">{{theme.name}}</small></p>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="row g-0 align-items-end" id="list-button">
                                    <div class="col-sm-8">
                                        <form action="/anime/create" method="POST">
                                            <input type="text" name="title" value={{anime.data.title}} hidden>
                                            <input type="text" name="mal_id" value={{anime.data.mal_id}} hidden>
                                            <input type="text" name="image" value={{anime.data.images.jpg.image_url}} hidden>
                                            <label>Add to list? </label>
                                                <select name="list">
                                                    {% for list in lists %}
                                                        <option value={{list._id}}>{{list.name}}</option>
                                                    {% endfor %}
                                                </select>
                                    </div>
                                            <div class="col-sm-4">
                                                <input type="Title" value="Add" class="btn btn-success btn-sm" style="--bs-btn-padding-y: .20rem; --bs-btn-padding-x: .1rem">
                                        </form>
                                            </div>
                                </div>
                        </div>
                    </div>
                </div>    
            </div>
    </div>
</div>


{% endblock %}