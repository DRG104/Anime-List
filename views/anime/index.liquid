{% layout 'layout.liquid' %}

<!-- this holds a list of user's lists -->

{% block content %}

{% for list in lists %}
    <div class="card" style="width: 30rem">
        <h3>List name: {{list.name}}</h3>
        <h3>List Description:{{list.description}}</h3>
        <h3>List of tags {{list.tags}}</h3>
    </div>
    <div>
        <a href="/anime/list/mine/{{list._id}}" class="btn btn-primary">Edit</a>
        <form action="/anime/list/mine/{{list._id}}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn btn-danger">
        </form>
    </div>
{% endfor %}


{% endblock %}