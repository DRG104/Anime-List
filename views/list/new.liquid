{% layout 'layout.liquid' %}

<!-- new form for lists -->

{% block content %}

<div class="container-md">
    <form action="/list/mine" method="POST">
        <fieldset>
            <legend style="color: white">Create a New List to Sort Your Anime!</legend>
            <label class="form-label" style="color: white">Name:</label>
            <input 
                class="form-control" 
                type="text" 
                name="name" 
                placeholder="enter name"
            >
            <label class="form-label" style="color: white">Description:</label>
            <input 
                class="form-control" 
                type="text" 
                name="description" 
                placeholder="enter description"
            >
            <label class="form-label" style="color: white">Tags:</label>
            <input 
                class="form-control" 
                type="text" 
                name="tags" 
                placeholder="ex. funny, sad, best, worst"
            >
        </fieldset>
        <input 
        type="submit" 
        value="Create New List" 
        class="btn btn-success"
        >
    </form>
</div>

{% endblock %}