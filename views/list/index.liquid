{% layout 'layout.liquid' %}

<!-- this holds a list of user's lists -->

<!-- if list < 0 will show "No list created" -->

{% block content %}
    {% for list in lists %}
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-dark mb-3 text-center">
                    <div class="card-header" style="text-align: center">
                        <h5>{{list.name}}</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text" style="text-align: center">
                            {{list.description}}
                        </p>
                    </div>
                    <div class="text-muted" style="text-align: center">
                            tags: {{list.tags}}
                    </div>
                    <div class="container card-footer text-center" id="footer">
                        <div class="row justify-content-center">
                            <div class="col-md-4">
                                <a href="/list/mine/{{list._id}}/edit" class="btn btn-primary">Edit</a>
                            </div>
                            <div class="col-md-4">
                                <a href="/list/mine/{{list._id}}" class="btn btn-info">View</a>
                            </div>
                            <div class="col-md-4">   
                                <form action="/list/mine/{{list._id}}?_method=DELETE" method="POST">
                                    <input type="submit" value="Delete" class="btn btn-danger">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>   
    {% endfor %}
{% endblock %}
