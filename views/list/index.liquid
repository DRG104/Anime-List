{% layout 'layout.liquid' %}

<!-- this holds a list of user's lists -->

<!-- if list < 0 will show "No list created" -->

{% block content %}

{% for list in lists %}
    <div class="card" style="width: 30rem">
        <h3>List name: {{list.name}}</h3>
        <h3>List Description:{{list.description}}</h3>
        <h3>List of tags: {{list.tags}}</h3>
    </div>
    <div>
        <a href="/list/mine/{{list._id}}/edit" class="btn btn-primary">Edit</a>
        <form action="/list/mine/{{list._id}}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn btn-danger">
        </form>
        <a href="/list/mine/{{list._id}}" class="btn btn-info">View {{fruit.name}}</a>
    </div>
{% endfor %}


{% endblock %}